# Keybindings
#############

# close window (shift: kill)
super + {_,shift + }Escape
  close-window {_,kill}

# cycle occupied desktops (shift: reverse)
super + {_,shift + }grave
  show-desktop {next,prev}

# cycle windows
super + {_,shift + }Tab
  bspc node -f {next,prev}.local.!hidden.window

# open launcher
super + space
  rofi -show drun -modi drun,run -theme launcher

# open terminal
super + Return
  kitty

# 1. Function Keys
##################

# jgmenu
super + F1
  launch-jgmenu
super + F2
  launch-jgmenu --checkout=restart
super + F3
  launch-jgmenu --checkout=scripts

# resize window to aspect ratio
super + {_,shift + }F4
  resize-ratio {_,4 3}

# toggles
super + F5
  toggle-daemon hotspots
super + F6
  toggle-borders
super + F7
  toggle-daemon cec-daemon

# 2. Number Keys
################

# Numbers (0-9): Show desktop 
super + {0-9}
  show-desktop {0-9}

# Shift + Number: Move to desktop
super + shift + {0-9}
  bspc node -d {0-9}

# 3. Letter Keys
################

# toggle sticky
super + a
  bspc node -g sticky=on

# balance
super + b
  bspc node @/ -B

# show empty desktop
super + d
  show-desktop empty

# file explorer
super + e
  quick-app -c Thunar -f thunar

# flip
super + f
  bspc node @parent -R 180

# toggle hidden
super + h
  toggle-hidden

# hide window
super + ctrl + h
  bspc node -g hidden

# scratchpad terminal
super + q
  quick-app -c kitty -i quick -f kitty --name quick

# rotate
super + r
  bspc node @parent -R 90

# screenshot
super + {_,shift +}s
  screenshot

# toggle floaty (floating+sticky)
super + t
  toggle-floaty

# vault
super + v
  launch-rofi vault

# toggle widgets
super + w
  toggle-widgets

# resize to window
super + x
  resize-cover 

# toggle monocle mode
super + z
  toggle-monocle

# 4. Media Keys
###############

# Brightness
super + {Prior,Next}
  set-brightness {up,down}
super + ctrl + {button4,button5}
  set-brightness {up,down}

# Volume
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
  set-volume {up,down}
super + {button4,button5}
  set-volume {up,down}

# 5. Numpad
###########

# Receptacles
super + KP_Add
  bspc node -i
super + KP_Subtract
  bspc node 'any.leaf.local.!window' -k
super + KP_Multiply
  bspc node -n 'any.leaf.local.!window'

# 6. Arrow Keys
###############

super + {Up,Down}
  bspc node -f @{parent, brother}
